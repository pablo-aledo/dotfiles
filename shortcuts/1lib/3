then
    #yfind=`cat /tmp/coordinates | head -n1 | cut -d',' -f2 | cut -d' ' -f1`
    #if [ $yfind -lt 500 ]
    #then
        cat /tmp/1lib_line >> /tmp/already_downloaded_zlib
        #return
    #fi
fi

xdotool key Ctrl+f
sleep 1
xdotool type 'Download ('
xdotool key Return
sleep 1
xdotool key Escape
sleep 1
xdotool key Down
xdotool key Down
xdotool key Down
xdotool key Down
sleep 1
if $(mouseover 3 10000 ~/.dotfiles/shortcuts/images/1libdl.png)
then
    xdotool click 1
    sleep 5
    xdotool key 4; shcw 1lib.4
    sleep 5
fi

xdotool key Home

xdotool key Ctrl+f
sleep 1
xdotool type 'Read online'
xdotool key Return
sleep 1
xdotool key Escape
sleep 1
xdotool key Down
xdotool key Down
xdotool key Down
xdotool key Down
sleep 1
if $( mouseover 3 10000 ~/.dotfiles/shortcuts/images/readonline.png )
then
    xdotool mousemove_relative 90 0
    xdotool click 1
    sleep 1
    xdotool key Down
    xdotool key Down
    sleep 1
    xdotool key Return
    sleep 1
    xdotool key 4; shcw 1lib.4
    sleep 5
fi

xdotool key Home

xdotool key Ctrl+f
sleep 1
xdotool type 'available for download'
xdotool key Return
sleep 1
xdotool key Escape
sleep 1
if $( mouseover 1 10000 ~/.dotfiles/shortcuts/images/copyright.png )
then
    cat /tmp/1lib_line >> /tmp/copyright_zlib
fi

count=0
while [ "$(ls ~/Descargas/*.crdownload)" != ""  ]
do
    sleep 10
    count=$(( $count + 1 ))
    [ $count -eq 20 ] && break
done

count=0
if [ "$(cat /tmp/file | wc -l)" -eq 1 ]
then
    while [ ! -e ~"/Descargas/$(cat /tmp/file)" ]
    do
        sleep 10
        count=$(( $count + 1 ))
        [ $count -eq 20 ] && break
    done
fi

size1=0
size2=1
while [ "$size1" != "$size2" ]
do
    size1=$(ls -l ~"/Descargas/$(cat /tmp/file)" | awk '{print $5}')
    sleep 10
    size2=$(ls -l ~"/Descargas/$(cat /tmp/file)" | awk '{print $5}')
done

xdotool key ctrl+w
sleep 5

