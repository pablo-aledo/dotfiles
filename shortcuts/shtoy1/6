export DISPLAY=:1
source ~/.dotfiles/source/.shell/xdotool
source ~/.dotfiles/source/.shell/adapt

user=$(cat /tmp/shtoy_user)

for n in $(seq 0 8 $(cat /tmp/shtoy_max))
do
    link="https://www.shadertoy.com/user/iq/sort=popular&from=$n&num=8"
    echo $link > /tmp/shtoy_link

    source 2
    source 4

    xdotool key Ctrl+w

    while [ -e /tmp/pause ]; do sleep 1; done
done
