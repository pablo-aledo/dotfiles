export DISPLAY=:1

touch /tmp/lock

xdotool mousemove 1180 70
xdotool click 1
sleep 5
xdotool mousemove 300 130
xdotool click 1

xdotool mousemove 0 0
mouseover 50 10000 ~/.dotfiles/shortcuts/images/print_download.png
xdotool mousemove 0 0

if `mouseover 1 10000 ~/.dotfiles/shortcuts/images/print_download.png`
then
    print ok
else
    rm -rf /tmp/lock
    return
fi

xdotool mousemove 430 240
xdotool click 1
sleep 5
xdotool key Ctrl+a
xdotool key Ctrl+c
sleep 1

file=$(xclip -sel clip -o | sed 's/ ([1-3])\././g')
echo $file > /tmp/file
[ -e ~"/Descargas/$file" ] && xdotool mousemove 930 670 && xdotool click 1
[ ! -e ~"/Descargas/$file" ] && xdotool key Return


rm -rf /tmp/lock

