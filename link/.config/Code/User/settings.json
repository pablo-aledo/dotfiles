{
    "workbench.colorTheme": "Default Dark+",

    "vim.ignorecase": "smartcase",
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["ยบ"],
        "after": ["@", "q"]
      },
      {
        "before": ["<space>"],
        "after": [":"]
      },
      {
        "before": ["<space>", "<space>"],
        "after": ["/"]
      },
      {
        "before": [">"],
        "after": [":n<cr>"]
      },
      {
        "before": ["<"],
        "after": [":N<cr>"]
      },
      {
        "before": ["<C-b>"],
        "after": ["<C-v>"]
      },
      {
        "before": ["j"],
        "after": ["g", "j"]
      },
      {
        "before": ["k"],
        "after": ["g", "k"]
      }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
      "<C-a>": false,
      "<C-f>": false
    },
    "editor.mouseWheelZoom": true
}
