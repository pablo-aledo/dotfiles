adapt_nofont(){
	#echo t 2 >> ~/.shell
	sed -i 's///g' ~/.tmux.conf
	sed -i 's///g' ~/.tmux.conf
	sed -i 's///g' ~/.tmux.conf
	sed -i 's///g' ~/.tmux.conf
	find ~/.vim/ -name '*tmuxline*' -type f -delete
}

