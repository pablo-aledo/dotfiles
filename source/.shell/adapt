adapt_awsserver(){

    if [ "$(distr)" = "Arch" ]
    then
        adapt_archserver
        return
    fi

    if [ "$(distr)" = "Ubuntu_16_04" ]
    then
        adapt_ubuntuserver
        return
    fi
}

