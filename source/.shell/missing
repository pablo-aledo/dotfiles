missing(){
    sudo updatedb
    dst=$1
    filename=$(basename $dst)
    src=$( locate $filename | egrep "$filename\$" | tail -n1 )
    locate $filename | egrep "$filename\$" | sed 's/^/# /g'
    echo $( [ -e $(dirname $dst) ] && echo "# " ) mkdir -p $(readlink -f $( dirname $dst ) | sed "s|$HOME|~|g")
    echo ln -s $(readlink -f $src | sed "s|$HOME|~|g") $(readlink -f $dst | sed "s|$HOME|~|g")
}
