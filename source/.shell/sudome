sudome_include(){
	user=`whoami`
	su -c "echo \"$user ALL=(ALL) NOPASSWD:ALL\" > /etc/sudoers.d/$user"
}

sudome_replace(){
	su -c "sed -i s/^root/$(whoami)/g /etc/sudoers"
}

sudome(){
	incdir=`su -c 'cat /etc/sudoers | grep includedir'`
	[ "$incdir" ] && sudome_include
	[ "$incdir" ] || sudome_replace
}
