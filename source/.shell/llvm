llvm_bc () {
	filetype=`file $1` 
	if [ "`echo $filetype | grep 'C source'`" ]
	then
		clang -S -emit-llvm $1 -o /tmp/file.bc
		gvim /tmp/file.bc
	fi
	if [ "`echo $filetype | grep 'LLVM IR'`" ]
	then
		llvm-dis $1 -o /tmp/file.ll
		gvim /tmp/file.ll
	fi
}

