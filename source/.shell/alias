alias watch='watch '
f(){ echo find -iname "'*$1*'" | bash ; }
F(){ grep -Rin "$1" ; }
FF(){ grep -Rin "$1" | cut -d':' -f1 | sort | uniq | grep -v 'Binary file' ; }
FV(){ grep -Rin "$1" | cut -d':' -f1 | sort | uniq | grep -v 'Binary file' | xargs vim ; reset ; }
