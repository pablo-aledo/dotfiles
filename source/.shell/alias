tailf(){
    while [ ! -e "$1" ]
    do
        sleep 1
    done
    tail -9999f "$1"
}

dupl2(){
    cat | while read line;
    do
        echo -n "'"$line"'"
        echo -n ' '
        echo -n "'"$(echo $line | sed $1)"'"
        echo
    done
}

dupl3(){
    cat | while read line;
    do
        line1=$(echo -n "'"$line"'")
        line2=$(echo -n "'"$(echo $line | sed $1)"'")
        [ "$line1" != "$line2" ] && echo "$line1 $line2"
    done
}

dupl4(){
    cat | while read line;
    do
        line1=$(echo -n "'"$line"'")
        line2=$(echo -n "'"$(echo $line | sed $1)"'")
        [ "$line1" != "$line2" ] && [ ! -e "$line2" ] && echo "$line1 $line2"
    done
}

