Watch(){
echo watch '"'zsh -c "'"source ~/.shell';' $*"'"'"' > /tmp/watchcmd
source /tmp/watchcmd
}

alias cdn='cd "$(find .. -maxdepth 1 -type d | sed "s|^...||g" | sort -g | grep -A1 -F "$(basename "$PWD")" | tail -n1 | sed "s|^|../|g")"'


mgrep(){
    [ $1 = '-' ] && file='' || file=$1
    echo -n strings -n1 $file > /tmp/script
    shift
    for a in $*
    do
        echo -n " | grep -i $a" >> /tmp/script
    done
    source /tmp/script
}

find_index(){
mgrep files $* | cut -d/ -f8 | sort | uniq | while read line; do echo "$(mgrep files $* | grep -F "/$line/" | wc -l) $line" ; done | sort -g
}

