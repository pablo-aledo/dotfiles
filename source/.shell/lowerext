lowerext(){
FILES=$(ls -1)

for FILE in $FILES
do
    EXT=$(echo $FILE | awk -F . '{print $NF}')
    if [[ $EXT =~ [A-Z]{1,} ]]
    then
        BASE=${FILE%\.*}
        NEWEXT=$(echo $EXT | tr '[:upper:]' '[:lower:]')
        if [ ! -e $BASE.$NEWEXT ]
        then
            mv $FILE $BASE.$NEWEXT
        else
            echo "Could not rename $FILE to $BASE.$NEWEXT: $BASE.$NEWEXT already exists!"
        fi
    fi
done
}
