" GUI
set guioptions-=m                                                       " Menu
set guioptions-=T                                                       " Header
set guioptions-=r                                                       " Scroll Right
set guioptions-=L                                                       " Scroll Left
set guioptions-=b                                                       " Scroll Bottom
":set guifont=Monospace\ 10                                             " Font to use
:set guifont=SauceCodePro\ NF\ Medium\ 10
":set guifont=*                                                         " Chose font manually 
colorscheme desert                                                      " Colors of syntax highlight

" if has("gui_running")
"   set lines=999 columns=999                                             " Maximize window
" endif
